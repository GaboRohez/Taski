<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/_24sdp"
    android:paddingStart="@dimen/_30sdp"
    android:paddingEnd="@dimen/_30sdp"
    android:background="@drawable/rounded_form"
    android:layout_gravity="center"
    android:elevation="8dp">

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginEnd="@dimen/_16sdp"
            android:src="@drawable/unchecked_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/what_s_in_your_mind_prompt"
            android:textColor="@color/purple"
            android:textColorHint="@color/unselected_color"
            android:background="@null"
            android:fontFamily="@font/urbanist_medium"
            android:textSize="@dimen/_11ssp" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/_16sdp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginEnd="@dimen/_16sdp"
            android:src="@drawable/leading_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/tvNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/add_a_note_prompt"
            android:maxLines="6"
            android:textColor="@color/purple"
            android:textColorHint="@color/unselected_color"
            android:background="@null"
            android:fontFamily="@font/urbanist_medium"
            android:textSize="@dimen/_10ssp" />

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCreate"
        android:text="@string/create"
        android:layout_marginTop="@dimen/_16sdp"
        android:textAllCaps="false"
        android:layout_gravity="end"
        android:textSize="@dimen/_14ssp"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:fontFamily="@font/urbanist_bold"
        android:textColor="@color/primaryColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>